{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceRoot}/build"
    },
    "tasks": [
        {
            "label": "1. Download Dependencies for Debug (conan)",
            "type": "shell",
            "command": "conan install .. -s build_type=Debug",
            "group": "test"
        },
        {
            "label": "2. Generate Project files (cmake)",
            "type": "shell",
            "windows": {
                "command": "cmake .. -G 'Visual Studio 15 2017 Win64'",
            },
            "osx": {
                "command": "cmake .. -G 'Xcode'",
            },
            "group": "test"
        },
        {
            "label": "3. Build for Debug (cmake)",
            "type": "shell",
            "command": "cmake --build . --config Debug",
            "group": "test",
            "identifier": "build"
        }
    ]
}
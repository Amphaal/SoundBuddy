{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "tasks": [
        /*DEBUG*/
        {
            "label": "Debug - 0. Create build folder",
            "group": "test",
            "type": "shell",
            "windows": {
                "command": "rm buildDebug -r -fo; mkdir buildDebug",
            },
            "osx": {
                "command": "rm -rf buildDebug; mkdir buildDebug",
            }
        },
        {
            "label": "Debug - 1. Download Dependencies",
            "dependsOn" : "Debug - 0. Create build folder",
            "group": "test",
            "type": "shell",
            "command": "conan install .. -s build_type=Debug --build missing",
            "options": {
                "cwd": "${workspaceRoot}/buildDebug"
            }
        },
        {
            "label": "Debug - 2a. Generate Project files",
            "dependsOn" : "Debug - 1. Download Dependencies",
            "group": "test",
            "type": "shell",
            "windows": {
                "command": "cmake .. -G 'Visual Studio 15 2017 Win64'",
            },
            "osx": {
                "command": "cmake .. -G 'Xcode'",
            },
            "options": {
                "cwd": "${workspaceRoot}/buildDebug"
            }
        },
        {
            "label": "Debug - 2b. Move maintenancetool",
            "dependsOn" : "Debug - 2a. Generate Project files",
            "group": {
                "isDefault": true,
                "kind" : "test"
            },
            "type": "shell",
            "windows": {
                "command": "copy C:/Qt/maintenancetool.exe bin/maintenancetool.exe",
            },
            "osx": {
                "command": "mkdir bin; cp -R /Qt/maintenancetool.app ./bin",
            },
            "options": {
                "cwd": "${workspaceRoot}/buildDebug"
            }
        },
        {
            "label": "Debug - 3. Build",
            "type": "shell",
            "command": "cmake --build ./buildDebug --config Debug"
        },
        /*RELEASE*/
        {
            "label": "Release - 0. Create build folder",
            "group": "build",
            "type": "shell",
            "windows": {
                "command": "rm buildRelease -r -fo; mkdir buildRelease",
            },
            "osx": {
                "command": "rm -rf buildRelease; mkdir buildRelease",
            }
        },
        {
            "label": "Release - 1. Download Dependencies",
            "dependsOn" : "Release - 0. Create build folder",
            "group": "build",
            "type": "shell",
            "command": "conan install .. -s build_type=Release --build missing",
            "options": {
                "cwd": "${workspaceRoot}/buildRelease"
            }
        },
        {
            "label": "Release - 2. Generate Project files",
            "dependsOn" : "Release - 1. Download Dependencies",
            "group": "build",
            "type": "shell",
            "windows": {
                "command": "cmake .. -G 'Visual Studio 15 2017 Win64'",
            },
            "osx": {
                "command": "cmake .. -G 'Xcode'",
            },
            "options": {
                "cwd": "${workspaceRoot}/buildRelease"
            }
        },
        {
            "label": "Release - 3. Build",
            "dependsOn" : "Release - 2. Generate Project files",   
            "group": "build",
            "type": "shell",
            "command" : "cmake --build ./buildRelease --config Release"
        },
        {
            "label": "Release - 4b. Prepare package source folder",
            "dependsOn" : "Release - 3. Build",
            "group": "build",
            "type": "shell",
            "windows": {
                "command": "rm packager/packages/com.lvwl.feedtnz.core/data -r -fo; mkdir packager/packages/com.lvwl.feedtnz.core/data;",
            },
            "osx": {
                "command": "rm -rf packager/packages/com.lvwl.feedtnz.core/data; mkdir packager/packages/com.lvwl.feedtnz.core/data;",
            }
        },
        {
            "label": "Release - 4c. Move binaries",
            "dependsOn" : "Release - 4b. Prepare package source folder",
            "group": "build",
            "type": "shell",
            "command": "mv buildRelease/bin/* packager/packages/com.lvwl.feedtnz.core/data"
        },
        {
            "label": "Release - 4d. Build package",
            "dependsOn" : "Release - 4c. Move binaries",
            "group": "build",
            "type": "shell",
            "windows": {
                "command": "${env:SYSTEMDRIVE}\\Qt\\QtIFW-3.0.6\\bin\\binarycreator.exe",
                "args": [
                    "-c",
                    "${workspaceRoot}\\packager\\config\\config.xml",
                    "-p",
                    "packager\\packages",
                    "-v",
                    "\\\\192.168.0.12\\www\\feedtnz\\downloads\\win\\FeedTNZSetup.exe"
                ]
            },            
            "osx": {
                "command": "${env:SYSTEMDRIVE}/Qt/QtIFW-3.0.6/bin/binarycreator",
                "args": [
                    "-c",
                    "${workspaceRoot}/packager/config/config.xml",
                    "-p",
                    "packager/packages",
                    "/volumes/www/feedtnz/downloads/osx/FeedTNZSetup.dmg"
                ]
            }
        },
        {
            "label": "Release - 5. Create remote Repo",
            "dependsOn" : "Release - 4d. Build package",
            "group": {
                "isDefault": true,
                "kind" : "build"
            },
            "type": "shell",
            "windows": {
                "command": "${env:SYSTEMDRIVE}\\Qt\\QtIFW-3.0.6\\bin\\repogen.exe",
                "args": [
                    "-p",
                    "packager\\packages",
                    "--update-new-components",
                    "\\\\192.168.0.12\\www\\feedtnz\\packages\\win"
                ]
            },            
            "osx": {
                "command": "${env:SYSTEMDRIVE}/Qt/QtIFW-3.0.6/bin/repogen",
                "args": [
                    "-p",
                    "packager/packages",
                    "--update-new-components",
                    "/volumes/www/feedtnz/packages/osx"
                ]
            }
        }
    ]
}
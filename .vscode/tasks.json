{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceRoot}/build"
    },
    "tasks": [
        {
            "label": "Download Dependencies for Debug (conan)",
            "type": "shell",
            "command": "conan install .. -s build_type=Debug",
            "group": "test"
        },
        {
            "label": "Configure linker x64 (cmake)",
            "type": "shell",
            "command": "cmake .. -G \"Visual Studio 15 2017 Win64\"",
            "group": "test"
        },
        {
            "label": "Build for Debug (cmake)",
            "type": "shell",
            "command": "cmake --build . --config Debug",
            "group": "test",
            "identifier": "build"
        }
    ]
}
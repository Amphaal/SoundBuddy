{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "tasks": [
        /*DEBUG*/
        {
            "label": "Debug - 0. Create build folder",
            "type": "shell",
            "windows": {
                "command": "rm buildDebug -r -fo; mkdir buildDebug",
            },
            "osx": {
                "command": "rm -rf buildDebug; mkdir buildDebug",
            },
            "group": "test"
        },
        {
            "label": "Debug - 1. Download Dependencies",
            "type": "shell",
            "command": "conan install .. -s build_type=Debug --build missing",
            "group": "test",
            "dependsOn" : "Debug - 0. Create build folder",
            "options": {
                "cwd": "${workspaceRoot}/buildDebug"
            }
        },
        {
            "label": "Debug - 2a. Generate Project files",
            "type": "shell",
            "windows": {
                "command": "cmake .. -G 'Visual Studio 15 2017 Win64'",
            },
            "osx": {
                "command": "cmake .. -G 'Xcode'",
            },
            "dependsOn" : "Debug - 1. Download Dependencies",
            "options": {
                "cwd": "${workspaceRoot}/buildDebug"
            },
            "group": "test"
        },
        {
            "label": "Debug - 2b. Move maintenancetool",
            "type": "shell",
            "dependsOn" : "Debug - 2a. Generate Project files",
            "windows": {
                "command": "copy C:/Qt/maintenancetool.exe /bin/",
            },
            "osx": {
                "command": "mkdir bin; cp -R /Qt/maintenancetool.app ./bin",
            },
            "options": {
                "cwd": "${workspaceRoot}/buildDebug"
            },
            "group": {
                "isDefault": true,
                "kind" : "test"
            }
        },
        {
            "label": "Debug - 3. Build",
            "type": "shell",
            "command": "cmake --build ./buildDebug --config Debug"
        },
        /*RELEASE*/
        {
            "label": "Release - 0. Create build folder",
            "type": "shell",
            "windows": {
                "command": "rm buildRelease -r -fo; mkdir buildRelease",
            },
            "osx": {
                "command": "rm -rf buildRelease; mkdir buildRelease",
            },
            "group": "build"
        },
        {
            "label": "Release - 1. Download Dependencies",
            "type": "shell",
            "command": "conan install .. -s build_type=Release --build missing",
            "group": "build",
            "dependsOn" : "Release - 0. Create build folder",
            "options": {
                "cwd": "${workspaceRoot}/buildRelease"
            }
        },
        {
            "label": "Release - 2. Generate Project files",
            "type": "shell",
            "windows": {
                "command": "cmake .. -G 'Visual Studio 15 2017 Win64'",
            },
            "osx": {
                "command": "cmake .. -G 'Xcode'",
            },
            "group": "build",
            "dependsOn" : "Release - 1. Download Dependencies",
            "options": {
                "cwd": "${workspaceRoot}/buildRelease"
            }
        },
        {
            "label": "Release - 3. Build",
            "type": "shell",
            "command" : "cmake --build ./buildRelease --config Release",
            "group": "build",
            "dependsOn" : "Release - 2. Generate Project files",          
        },
        {
            "label": "Release - 4a. Prepare package destination folder",
            "type": "shell",
            "windows": {
                "command": "rm pkgRelease -r -fo; mkdir pkgRelease;",
            },
            "osx": {
                "command": "rm -rf pkgRelease; mkdir pkgRelease;",
            },
            "group": "build",
            "dependsOn" : "Release - 3. Build"
        },
        {
            "label": "Release - 4b. Prepare package source folder",
            "type": "shell",
            "windows": {
                "command": "rm packager/packages/com.wtnz.feedtnz/data -r -fo; mkdir packager/packages/com.wtnz.feedtnz/data;",
            },
            "osx": {
                "command": "rm -rf packager/packages/com.wtnz.feedtnz/data; mkdir packager/packages/com.wtnz.feedtnz/data;",
            },
            "group": "build",
            "dependsOn" : "Release - 4a. Prepare package destination folder"
        },
        {
            "label": "Release - 4c. Move binaries",
            "type": "shell",
            "command": "mv buildRelease/bin/* packager/packages/com.wtnz.feedtnz/data",
            "group": "build",
            "dependsOn" : "Release - 4b. Prepare package source folder"
        },
        {
            "label": "Release - 4d. Build package",
            "type": "shell",
            "windows": {
                "command": "${env:SYSTEMDRIVE}\\Qt\\QtIFW-3.0.4\\bin\\binarycreator.exe -c ${workspaceRoot}\\packager\\config\\config.xml -p packager\\packages pkgRelease\\FeedTNZSetup.exe"
            },            
            "osx": {
                "command": "${env:SYSTEMDRIVE}/Qt/QtIFW-3.0.4/bin/binarycreator -c ${workspaceRoot}/packager/config/config.xml -p packager/packages pkgRelease/FeedTNZSetup.dmg"
            },
            "group": "build",
            "dependsOn" : "Release - 4c. Move binaries"
        },
        {
            "label": "Release - 5. Create remote Repo",
            "type": "shell",
            "windows": {
                "command": "${env:SYSTEMDRIVE}\\Qt\\QtIFW-3.0.4\\bin\\repogen.exe -p packager\\packages pkgRepo"
            },            
            "osx": {
                "command": "${env:SYSTEMDRIVE}/Qt/QtIFW-3.0.4/bin/repogen -p packager/packages pkgRepo"
            },
            "group": {
                "isDefault": true,
                "kind" : "build"
            },
            "dependsOn" : "Release - 4d. Build package"
        }
    ]
}
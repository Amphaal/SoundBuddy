{
    "terminal.integrated.profiles.windows": {
        "Msys2 Shell" : {
            "path" : "${env:MINGW64_ROOT}\\..\\usr\\bin\\bash.exe",
            "args": [        
                "--login",
                "-i"
            ],
            "env": {
                "MSYSTEM": "MINGW64",
                "MSYS2_PATH_TYPE": "inherit",
                "CHERE_INVOKING": "1",
                "MSVSCODE": "1"
            }
        }
    },
    "terminal.integrated.defaultProfile.windows": "Msys2 Shell",
    "search.exclude": {
        "deps" : true
    },
    "files.associations": {
        "*.ts": "xml" // Qt translation files 
    }
}